<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@drawable/margem">


    <ImageView
        android:id="@+id/imageListaAnimais"
        android:layout_width="45dp"
        android:layout_height="44dp"
        android:padding="5dp"
        app:srcCompat="@drawable/ic_especie_spinner" />

    <LinearLayout
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textListaAnimaisNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_vertical"
            android:text="Nome animal"
            android:textAppearance="@style/Fonte_Textos_menores"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textListaAnimaisDA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_vertical"
            android:text="Dono deste Animal"
            android:textAppearance="@style/Fonte_Textos_menores"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textListaAnimaisEspecie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="Especie"
            android:textAlignment="textEnd"
            android:textAppearance="@style/Fonte_Textos_menores"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textListaAnimaisRaca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="Raca"
            android:textAlignment="textEnd"
            android:textAppearance="@style/Fonte_Textos_menores"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>