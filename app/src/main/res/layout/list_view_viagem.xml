<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/fundo_margem_preta"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_menu_viagem" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textListViagemID"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="ID"
                    android:textColor="@color/preto" />

                <TextView
                    android:id="@+id/textListViagemData"
                    android:layout_width="167dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Data"
                    android:textColor="@color/preto" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textListViagemDA"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="DonoAnimal"
                    android:textColor="@color/preto" />

                <TextView
                    android:id="@+id/textListViagemMO"
                    android:layout_width="167dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Motorista"
                    android:textColor="@color/preto" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textListViagemValor"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Valor"
                    android:textColor="@color/preto" />

                <TextView
                    android:id="@+id/textListViagemDistacia"
                    android:layout_width="169dp"
                    android:layout_height="wrap_content"

                    android:paddingLeft="5dp"
                    android:text="Distancia"
                    android:textColor="@color/preto" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>