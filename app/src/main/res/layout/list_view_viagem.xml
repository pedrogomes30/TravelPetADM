<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/branco"
    android:orientation="vertical"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_menu_viagem" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textListViagemDA"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="DonoAnimal"
                android:textColor="@color/preto"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textListViagemID"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="ID"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textListViagemData"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Data"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textListViagemMO"
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Motorista"
                android:textColor="@color/preto"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textListViagemValor"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Valor"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textListViagemDistacia"
                android:layout_width="169dp"
                android:layout_height="wrap_content"

                android:paddingLeft="5dp"
                android:text="Distancia"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="380dp"
        android:layout_height="0.3dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/fundo_divisor" />

</LinearLayout>