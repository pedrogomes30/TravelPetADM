<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/roxo_escuro"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="170dp"
                android:layout_height="185dp"
                app:srcCompat="@drawable/ic_dono_animal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="181dp"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/textPerfilNomeDA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nome"
                    android:textAppearance="@style/Fonte_Textos_menu"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textPerfilSobrenomeDA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sobrenome"
                    android:textAppearance="@style/Fonte_Textos_menores"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textPerfilCPFDA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CPF"
                    android:textAppearance="@style/Fonte_Textos_menores"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textPerfilEmailDA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/e_mail"
                    android:textAppearance="@style/Fonte_Textos_menores"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textPerfilTipoPerfilDA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tipoperfil"
                    android:textAppearance="@style/Fonte_Textos_menores"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textPerfilStatusDA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status Perfil"
                    android:textAppearance="@style/Fonte_Textos_menores"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textPerfilAvaliacaoDA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Avaliacao"
                    android:textAppearance="@style/Fonte_Textos_menores"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgAprovacao"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"

                        app:srcCompat="@drawable/ic_desaprovar" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/roxo_preto"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Animais cadastrados"
            android:textAlignment="center"
            android:textAppearance="@style/Fonte_Textos_menu.laranja"
            android:textSize="18sp" />

        <FrameLayout
            android:layout_width="401dp"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listaPerfilDAAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/roxo_preto"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Viagens realizadas"
            android:textAlignment="center"
            android:textAppearance="@style/Fonte_Textos_menu.laranja"
            android:textSize="18sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listaPerfilDAViagens"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
