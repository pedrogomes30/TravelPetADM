<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/fundo_margem_preta"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageAvaliacao"
        android:layout_width="45dp"
        android:layout_height="match_parent"

        android:contentDescription="@string/todo"
        android:padding="5dp"
        app:srcCompat="@drawable/ic_especie_spinner" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textAvaliador"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTintMode="screen"
            android:gravity="clip_vertical|fill_vertical"
            android:paddingStart="5dp"
            android:text="@string/avaliador"
            android:textAlignment="textStart"
            android:textAppearance="@style/Fonte_Textos_menores"
            android:textColor="@color/preto"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/textAvaliado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:backgroundTintMode="screen"
            android:gravity="clip_vertical|fill_vertical"
            android:paddingEnd="8dp"
            android:text="@string/avaliado"
            android:textAlignment="textStart"
            android:textAppearance="@style/Fonte_Textos_menores"
            android:textColor="@color/preto"
            android:textSize="12sp"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <TextView
        android:id="@+id/textNotaAvaliacao"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:backgroundTintMode="screen"
        android:gravity="center_vertical"
        android:paddingEnd="8dp"
        android:text="@string/notaAvaliacao"
        android:textAlignment="textEnd"
        android:textAppearance="@style/Fonte_Textos_menores"
        android:textColor="@color/preto"
        android:textSize="14sp" />

</LinearLayout>