<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.contasAdm.AdicionarAdmActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/roxo_escuro"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/cadastro_adm"
            android:textAlignment="center"
            android:textAppearance="@style/Fonte_Textos_menu"
            android:textColor="@color/Laranja_Principal" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="@string/cadastre_abaixo_um_novo_administrador_da_travelpet"
            android:textAlignment="center"
            android:textAppearance="@style/Fonte_Textos_menores"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:drawableStart="@drawable/ic_nome_login"
            android:drawablePadding="5dp"
            android:text="@string/nome"
            android:textAppearance="@style/Fonte_Textos_menores"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/textNomeCadAdm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:autofillHints=""
            android:ems="10"
            android:inputType ="textPersonName"
            android:textAppearance="@style/Fonte_Textos_menores"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="6dp"
            android:drawableStart="@drawable/ic_email_login"
            android:drawablePadding="5dp"
            android:text="@string/email"
            android:textAppearance="@style/Fonte_Textos_menores"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/textEmailCadAdm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textAppearance="@style/Fonte_Textos_menores"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:drawableStart="@drawable/ic_senha_login"
            android:drawablePadding="5dp"
            android:text="@string/senha"
            android:textAppearance="@style/Fonte_Textos_menores"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/textSenhaCadAdm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textAppearance="@style/Fonte_Textos_menores"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btSalvarCadAdm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Salvar"
            android:textAppearance="@style/Fonte_Textos_menores"
            android:textSize="18sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>