<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/roxo_escuro"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/roxo_escuro"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/roxo_escuro"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textEspecieList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/margem"
                    android:text="@string/especie"
                    android:textAppearance="@style/Fonte_Textos_menores"
                    android:textSize="14sp" />/>
                />

                <TextView
                    android:id="@+id/textRacaList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/margem"
                    android:text="@string/raca"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/Fonte_Textos_menores"
                    android:textSize="14sp" /><![CDATA[

                />/>
            ]]>
            </LinearLayout>

            <TextView
                android:id="@+id/textDescricaoList"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:background="@drawable/margem"
                android:foregroundTint="@color/branco"
                android:text="Descrição"
                android:textAlignment="textStart"
                android:textAppearance="@style/Fonte_Textos_menores"
                android:textSize="14sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView><![CDATA[

    />

]]>
</LinearLayout>