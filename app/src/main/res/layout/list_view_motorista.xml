<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@drawable/fundo_margem_preta"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageListaMO"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_dono_animal" />

        <LinearLayout
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNomeListaMO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textColor="@color/preto"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textSobrenomeListaMO"
                    android:layout_width="229dp"
                    android:layout_height="wrap_content"
                    android:text="Sobrenome"
                    android:textColor="@color/preto" />

                <TextView
                    android:id="@+id/textStatusListaMO"
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    android:paddingRight="3dp"
                    android:text="Status"
                    android:textAlignment="textEnd"
                    android:textColor="@color/preto" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>